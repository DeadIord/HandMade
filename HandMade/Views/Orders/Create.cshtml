@model OrderDetails

<div class="row card"style="padding: 20px 20px 20px 20px;">
<h2>Оформление заказа</h2>

<form asp-action="CreateOrder" method="post">
    <div class="form-group">
        <label for="firstName">Имя</label>
        <input type="text" class="form-control" id="firstName" name="firstName" required>
    </div>
    <div class="form-group">
        <label for="lastName">Фамилия</label>
        <input type="text" class="form-control" id="lastName" name="lastName" required>
    </div>
    <div class="form-group">
        <label for="patronymic">Отчество</label>
        <input type="text" class="form-control" id="patronymic" name="patronymic" required>
    </div>
    <div class="form-group">
        <label for="numberPhone">Номер телефона</label>
        <input type="text" class="form-control" id="numberPhone" name="numberPhone" required>
    </div>
    <div class="form-group">
        <label for="addres">Адрес</label>
        <input type="text" class="form-control" id="addres" name="addres" required>
    </div>
    <button type="submit" class="btn btn-primary">Оформить заказ</button>
</form>
</div>